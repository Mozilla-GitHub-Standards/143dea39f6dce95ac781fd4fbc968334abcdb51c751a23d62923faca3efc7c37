# General telegraf stuff
[agent]
logfile = "/var/log/telegraf/telegraf.log"
debug = true

# Enable the Apache plugin
[[inputs.apache]]
urls = ["http://127.0.0.1/server-status?auto"]

# Enable the cpu plugin
[[inputs.cpu]]
percpu = true
totalcpu = true

# Enable the Disk input plugin
[[inputs.disk]]
mount_points = [
  "/",
  "/repo/hg/mozilla",
]

# Enable the DiskIO input plugin
[[inputs.diskio]]

# Enable Logparser inputs plugin
[[inputs.logparser]]
files = ["/var/log/httpd/hg.mozilla.org/access_log"]
from_beginning = true

    [inputs.logparser.grok]
    patterns = ["%{COMBINED_LOG_FORMAT}"]
    measurement = "apache_access_log"

# Enable the Mem input plugin
[[inputs.mem]]

# Enable the Net input plugin
[[inputs.net]]

# Enable the Processes input plugin
[[inputs.processes]]

# Enable the Procstat input plugin
[[inputs.procstat]]
systemd_unit = "vcsreplicator@0.service"

[[inputs.procstat]]
systemd_unit = "vcsreplicator@1.service"

[[inputs.procstat]]
systemd_unit = "vcsreplicator@2.service"

[[inputs.procstat]]
systemd_unit = "vcsreplicator@3.service"

[[inputs.procstat]]
systemd_unit = "vcsreplicator@4.service"

[[inputs.procstat]]
systemd_unit = "vcsreplicator@5.service"

[[inputs.procstat]]
systemd_unit = "vcsreplicator@6.service"

[[inputs.procstat]]
systemd_unit = "vcsreplicator@7.service"

# Enable the System input plugin
[[inputs.system]]

# Send metrics to InfluxDB
[[outputs.influxdb]]
urls = ["http://10.191.5.155:8086"]
