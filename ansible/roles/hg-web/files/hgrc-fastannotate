# This is an hgrc snippet used to enable fastannotate on repositories.
# It can be rolled into the main hgrc if/when we enable fastannotate
# by default.

[extensions]
fastannotate =

[fastannotate]
mainbranch = default

# Enable integration with hgweb.
modes = hgweb

# serve the annotate cache via wire protocol
server = True
